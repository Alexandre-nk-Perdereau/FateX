<div class="fatex-u-padding-std">
    {{#each stress as |stress stressIndex|}}
        <div class="fatex__inline_stress__track item {{#if stress.isDisabled}}fatex__helper--is-disabled{{/if}}" data-item-id="{{stress._id}}">
            <header class="fatex-headline fatex-eb-sortable" data-item-id="{{stress._id}}">
                <h3 class="fatex-headeline__text">{{stress.name}}</h3>
                <div class="fatex__headline__actions fatex__item__actions">
                    <span class="fatex__item__sort fatex__inline_stress__sort"></span>
                    <span class="fatex__item__settings fatex__inline_stress__settings" data-item="{{stress._id}}"></span>
                    <span class="fatex__item__delete fatex__inline_stress__delete" data-item="{{stress._id}}"></span>
                </div>
            </header>

            {{#if stress.data.description}}
                <span class="fatex__inline_stress__track__description">
                    {{stress.data.description}}
                </span>
            {{/if}}

            <div class="fatex__inline_stress__track__items fatex__inline_stress__track__items__break">
                {{#each stress.boxes as |box boxIndex|}}
                    <div class="fatex__inline_stress__track__item">
                        <label class="fatex__inline_stress__track__item__box" data-index="{{boxIndex}}" data-item="{{stress._id}}">
                            <span class="fatex__inline_stress__track__item__label">{{box.label}}</span>
                            <input class="fatex__inline_stress__track__item__checkbox" type="checkbox"{{#if box.isChecked}} checked="checked"{{/if}}>
                            <span class="fatex__inline_stress__track__item__icon"></span>
                        </label>
                    </div>

                    {{#if (eq @index 3)}}
                        <div class="fatex__inline_stress__track__break"></div>
                    {{/if}}
                {{/each}}

                {{#each stress.fillers}}
                    <div class="fatex__inline_stress__track__filler"><div class="fatex__inline_stress__track__item__box"></div></div>
                {{/each}}
            </div>
        </div>
    {{/each}}
</div>
