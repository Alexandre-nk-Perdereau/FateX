<div class="fatex-setting">
    <header class="fatex-headline ">
        <h3 class="fatex-headline__text">{{localize headline}}</h3>
    </header>

    <label class="fatex-setting__text" for="{{ fieldName }}">
        <div contenteditable="true" class="fatex-text-input" data-edit="{{ fieldName }}">{{{field}}}</div>

        {{#if help}}<span class="fatex-text-input__setting-label">{{localize help}}</span>{{/if}}
    </label>
</div>
