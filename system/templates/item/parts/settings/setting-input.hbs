<div class="fatex__setting">
    <header class="fatex-headline">
        <h3 class="fatex-headline__text">{{localize headline}}</h3>
    </header>

    <label for="{{ fieldName }}">
        <input
            type="text"
            class="fatex-text-input"
            name="{{ fieldName }}"
            value="{{ field }}"
            {{#if placeholder }}placeholder="{{ localize placeholder}}"{{/if}}
            {{#if dtype }}data-dtype="{{ dtype }}"{{/if}}
        />

        {{#if help}}<span class="fatex-text-input__setting-label">{{localize help}}</span>{{/if}}
    </label>
</div>
