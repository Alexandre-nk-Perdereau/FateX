<div class="fatex-setting">
    <header class="fatex-headline">
        <h3 class="fatex-headline__text">{{localize headline}}</h3>
    </header>

    <div class="fatex__setting__radio__group fatex__setting__radio__group--ranks">
        {{#each radioItems as |radioItem radioItemIndex|}}
            <div
                class="fatex__setting__radio{{#if (eq radioItem ../field)}} fatex__setting__radio--active{{/if}}{{#if (lt radioItem 0)}} fatex__setting__radio--negative{{/if}}"
                data-value="{{ radioItem }}"
                data-name="{{ ../fieldName }}"
                data-dtype="{{ ../dtype }}"
            >
                <span class="fatex__setting__radio__value">{{#if (gte radioItem 0)}}+{{/if}}{{ radioItem }}</span>
            </div>
        {{/each}}

    </div>
</div>
