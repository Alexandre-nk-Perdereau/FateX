<div class="fatex__stunts">
    <h2 class="fatex__stunts__headline">
        <span>{{localize "FAx.Sheet.Stunts"}}</span>

        <div class="fatex__item__actions">
            <span class="fatex__item__add fatex__stunt__add"></span>
        </div>
    </h2>

    {{#each stunts as |stunt stuntIndex|}}
        <div class="fatex__stunt item {{#if stunt.data.collapsed}}fatex__stunt__collapsed{{/if}}" data-item-id="{{stunt._id}}">
            <header class="fatex-headline fatex-eb-sortable" data-item-id="{{stunt._id}}">
                <h3 class="fatex-headline__text">{{stunt.name}}</h3>

                <div class="fatex__headline__actions fatex__item__actions">
                    <span class="fatex__item__sort fatex__stunt__sort"></span>
                    <span class="fatex__item__settings fatex__stunt__settings" data-item="{{stunt._id}}"></span>
                    <span class="fatex__item__delete fatex__stunt__delete" data-item="{{stunt._id}}"></span>
                </div>

                <div class="fatex__item__collapsible">
                    <span class="fatex__item__collapse fatex__stunt__collapse--toggle {{#if stunt.data.collapsed}}fatex__item__collapse--closed{{/if}}" data-item="{{stunt._id}}"></span>
                </div>
            </header>

            {{#unless stunt.data.collapsed}}
                {{#if stunt.data.description}}
                    <div class="fatex__stunt__description">
                        {{#if stunt.data.markdown}}
                            {{{stunt.data.markdown}}}
                        {{else}}
                            {{{stunt.data.description}}}
                        {{/if}}
                    </div>
                {{/if}}
            {{/unless}}
        </div>
    {{/each}}
</div>
