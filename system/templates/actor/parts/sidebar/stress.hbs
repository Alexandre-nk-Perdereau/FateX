<section class="fatex-item-grid fatex-u-padding-std">
    {{#each stress as |stress stressIndex|}}
        <div class="{{#if stress.isDisabled}}fatex-u-disabled{{/if}}" data-item-id="{{stress._id}}">
            <header class="fatex-headline fatex-eb-sortable" data-item-id="{{stress._id}}">
                <h3 class="fatex-headline__text">{{stress.name}}</h3>

                <div class="fatex-actions fatex-actions--headline">
                    <i class="fatex-eb-item-sort fatex-actions__icon fatex-actions__icon--move fa fa-sort"></i>
                    <i class="fatex-eb-stress-settings fatex-actions__icon fa fa-cog" data-item="{{stress._id}}"></i>
                    <i class="fatex-eb-stress-delete fatex-actions__icon fatex-u-delete fa fa-trash" data-item="{{stress._id}}"></i>
                </div>
            </header>

            {{#if stress.data.description}}
                <span class="fatex-item-description">
                    {{stress.data.description}}
                </span>
            {{/if}}

            <div class="fatex-stress-track">
                {{#each stress.boxes as |box boxIndex|}}
                    <label
                        class="fatex-eb-stess-checkbox fatex-checkbox"
                        data-index="{{boxIndex}}"
                        data-item="{{stress._id}}"
                    >
                        <span class="fatex-checkbox__label">{{box.label}}</span>

                        <input
                            class="fatex-checkbox__input"
                            type="checkbox"
                            {{#if box.isChecked}}checked="checked"{{/if}}
                        >

                        <i class="fatex-checkbox__icon fa fa-times"></i>
                    </label>
                {{/each}}

                {{#each stress.fillers}}
                    <div class="fatex-eb-stess-checkbox fatex-checkbox fatex-checkbox--filler"></div>
                {{/each}}
            </div>
        </div>
    {{/each}}

    <div class="fatex-eb-stress-add fatex-headline fatex-headline--center fatex-headline--helper">
        <h3 class="fatex-headline__text">+</h3>
    </div>
</section>
