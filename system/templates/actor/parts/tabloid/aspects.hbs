<header class="fatex-headline">
    <h2 class="fatex-headline__text">{{localize "FAx.Sheet.Aspects"}}</h2>
    <div class="fatex-actions fatex-actions--headline">
        <i class="fatex-eb-aspect-add fatex-actions__icon fa fa-plus"></i>
    </div>
</header>

{{#each aspects as |aspect aspectIndex|}}
    <div class="fatex-eb-sortable fatex-item" data-item-id="{{aspect._id}}">
        <div class="fatex-u-pos-relative">
            <div class="fatex-eb-aspect-input fatex-text-input" contenteditable="true" data-item-id="{{aspect._id}}">{{{aspect.data.value}}}</div>

            <div class="fatex-actions fatex-actions--item">
                <i class="fatex-eb-item-sort fatex-actions__icon fa fa-sort"></i>
                <i class="fatex-eb-aspect-settings fatex-actions__icon fa fa-cog" data-item="{{aspect._id}}"></i>
                <i class="fatex-eb-aspect-delete fatex-actions__icon fatex-u-delete fa fa-trash" data-item="{{aspect._id}}"></i>
            </div>

            <label class="fatex-text-input__label">{{aspect.data.label}}</label>
        </div>
    </div>
{{/each}}
